<h1>Enviar áudio de ruído</h1>

<% if flash[:alert].present? %>
  <div class="alert"><%= flash[:alert] %></div>
<% end %>

<%= form_with url: audio_submissions_path, scope: :audio_submission, local: true, multipart: true do |f| %>
  <div>
    <label>Áudio</label>
    <%= f.file_field :audio %>
  </div>

  <div>
    <label>Latitude</label>
    <%= f.text_field :latitude %>
  </div>

  <div>
    <label>Longitude</label>
    <%= f.text_field :longitude %>
  </div>

  <div>
    <label>Duração (segundos)</label>
    <%= f.number_field :duration_seconds, min: 1, max: 60 %>
  </div>

  <div>
    <%= f.submit 'Enviar' %>
  </div>
<% end %>
