<h2>Editar Perfil</h2>

<%= form_for(current_user, url: users_profile_path, method: :patch, html: { multipart: true, class: "profile-form" }) do |f| %>
  <% if current_user.errors.any? %>
    <div class="error-messages">
      <h4><%= pluralize(current_user.errors.count, "erro") %> impediram que seu perfil fosse salvo:</h4>
      <ul>
        <% current_user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="profile-section">
    <h3>Informações do Perfil</h3>
    <div class="field">
      <%= f.label :name, "Nome" %>
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :email, "E-mail (não editável)" %>
      <%= f.email_field :email, disabled: true, class: 'readonly-field' %>
    </div>

    <div class="field">
      <%= f.label :bio, "Biografia" %>
      <%= f.text_area :bio, rows: 4, placeholder: "Conte um pouco sobre você..." %>
    </div>

    <div class="field avatar-field">
      <h3>Avatar do Perfil</h3>
      <% if current_user.current_avatar.present? %>
        <% img_path = "avatars/#{current_user.current_avatar}.png" %>
        <div class="current-avatar">
          <% if asset_exists?(img_path) %>
            <%= image_tag img_path, class: 'avatar-preview', alt: current_user.current_avatar, style: 'width:120px;height:120px;object-fit:cover;border-radius:50%;' %>
          <% else %>
            <div class="avatar-preview placeholder"><%= current_user.current_avatar %></div>
          <% end %>
        </div>
      <% else %>
        <div class="avatar-preview placeholder">Nenhum avatar selecionado</div>
      <% end %>

      <% if current_user.pending_avatar.present? %>
        <div class="pending-avatar">
          <h4>Pré-visualização (pendente)</h4>
          <% p = "avatars/#{current_user.pending_avatar}.png" %>
          <% if asset_exists?(p) %>
            <%= image_tag p, class: 'avatar-preview pending', alt: current_user.pending_avatar, style: 'width:120px;height:120px;object-fit:cover;border-radius:50%;' %>
          <% else %>
            <div class="avatar-preview placeholder"><%= current_user.pending_avatar %></div>
          <% end %>
          <%= link_to 'Confirmar alteração', confirm_avatars_path, method: :post, class: 'btn primary', data: { confirm: 'Confirma aplicar o avatar ao perfil?' } %>
        </div>
      <% end %>

      <p><%= link_to 'Abrir catálogo de avatares', avatars_path, class: 'btn' %></p>
    </div>

    <div class="field">
      <%= f.label :daily_notifications, "Receber notificações diárias por e-mail" %>
      <div class="checkbox-with-hint">
        <%= f.check_box :daily_notifications %>
        <span class="field-hint">Ativado por padrão. Desmarque para não receber.</span>
      </div>
    </div>

    <div class="actions profile-actions">
      <%= f.submit "Atualizar Perfil", class: 'primary-button' %>
    </div>
  </div>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "password-form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="password-section">
    <h3>Alterar Senha</h3>
    <div class="field">
      <div class="label-with-hint">
        <%= f.label :password, "Nova senha" %>
        <span class="field-hint">(preencha apenas se quiser alterar)</span>
      </div>
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <span class="field-hint">Mínimo de <%= @minimum_password_length %> caracteres</span>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirme a nova senha" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <div class="label-with-hint">
        <%= f.label :current_password, "Senha atual" %>
        <span class="field-hint">(necessária para alterar a senha)</span>
      </div>
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions password-actions">
      <%= f.submit "Alterar Senha", class: 'password-button' %>
    </div>
  </div>
<% end %>

<div class="danger-zone">
  <h3>Cancelar minha conta</h3>
  <p>Deseja encerrar sua conta? <%= button_to "Cancelar minha conta", registration_path(resource_name), 
    data: { turbo_confirm: "Tem certeza? Esta ação não pode ser desfeita." }, 
    method: :delete, 
    class: 'danger-button' %></p>
</div>

<%= link_to "Voltar", :back, class: 'back-link' %>
